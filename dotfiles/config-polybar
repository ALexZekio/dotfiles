scroll-down = i3wm-wsprev

;托盘透明
#tray-transparent = true

;键盘
[module/xkeyboard]
type = internal/xkeyboard

blacklist-0 = num lock
blacklist-1 = scroll lock

label-layout = %layout%
label-indicator = %name%

format =  <label-layout> <label-indicator>
format-spacing = 0
format-foreground = ${colors.magenta}
format-label-prefix= " "

label-indicator-prefix = " "
label-indicator-foreground = ${colors.red}
;电池设定
[module/battery]
type = internal/battery

full-at = 99 

;Use the command to list batteries and adapters: 
;ls -l /sys/class/power_supply/
battery = BAT0
adapter = ADP1 

poll-interval = 5

time-format = %H:%M

format-charging-prefix = " "
format-discharging-prefix = " "
format-full-prefix = " "


;参数设置
label-charging = %percentage%%
label-discharging = %percentage%%
label-full =   100%


;充电放电设定
format-charging = <animation-charging> <label-charging>
format-discharging = <ramp-capacity> <label-discharging>


;<ramp-capacity>设定
ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
;<animation-charging>设定
animation-charging-0 =   
animation-charging-1 =   
animation-charging-2 =   
animation-charging-3 =   
animation-charging-4 =   
animation-charging-framerate = 750

;颜色
format-charging-foreground = ${colors.green}
format-discharging-foreground = ${colors.orange}
format-full-foreground = ${colors.green}

;溫度
[module/temperature]
type = internal/temperature
interval = 0.5
thermal-zone = 0
warn-temperature = 60

format = <ramp> <label>
format-warn = <ramp> <label-warn>

label = %temperature%
label-warn =  %temperature%
label-warn-foreground = ${colors.red} 
label-foreground = ${colors.orange}
ramp-foreground = ${colors.orange}

ramp-0 = 
ramp-1 = 
ramp-2 = 

format-prefix = " "
format-warn-prefix = " "

;天气
[module/weather]
type = custom/script
interval = 1800
format = <label>
format-prefix = " "
format-foreground = ${colors.moccasin}
exec = python ~/.config/polybar/weather

;时间设定 
[module/date]
type = internal/date
;刷新时间1s
interval = 1.0
;时间日期格式设置
time = %H:%M:%S
date = %Y-%m-%d

format = <label> 
format-prefix = " "

label =   %date%   %time% 

format-foreground = ${colors.orange1}

;github设定
[module/github]
